<ul>  
  <% cart.each do |product| %>
    <li><%= product %></li>
  <% end %>
</ul>

<%= form_tag ({controller: 'products',
    action: 'add',
    method: 'post'}) do %>
    <label for=product> Please enter item to add to cart: </label>
    <input name=product>
    <input type=submit value='add to cart'>
<% end %>